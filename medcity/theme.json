{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        { "slug": "primary", "color": "#564298", "name": "Primary" },
        { "slug": "primary-light", "color": "#7B63B8", "name": "Primary Light" },
        { "slug": "primary-dark", "color": "#3F2F70", "name": "Primary Dark" },
        { "slug": "secondary", "color": "#a8ddd4", "name": "Secondary" },
        { "slug": "secondary-light", "color": "#C5EAE4", "name": "Secondary Light" },
        { "slug": "secondary-dark", "color": "#85C4B8", "name": "Secondary Dark" },
        { "slug": "accent", "color": "#9b8fb5", "name": "Accent" },
        { "slug": "background", "color": "#ffffff", "name": "Background" },
        { "slug": "background-warm", "color": "#f6f5ef", "name": "Background Warm" },
        { "slug": "text", "color": "#2e2e2e", "name": "Text" },
        { "slug": "text-light", "color": "#666666", "name": "Text Light" },
        { "slug": "border", "color": "#E0E0E0", "name": "Border" },
        { "slug": "success", "color": "#85C4B8", "name": "Success" },
        { "slug": "warning", "color": "#D4A843", "name": "Warning" },
        { "slug": "urgent", "color": "#C64B4B", "name": "Urgent" },
        { "slug": "info", "color": "#2563eb", "name": "Info" }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Poppins, sans-serif",
          "slug": "heading",
          "name": "Heading"
        },
        {
          "fontFamily": "Open Sans, sans-serif",
          "slug": "body",
          "name": "Body"
        }
      ],
      "fontSizes": [
        { "slug": "small", "size": "14px", "name": "Small" },
        { "slug": "medium", "size": "16px", "name": "Medium" },
        { "slug": "large", "size": "18px", "name": "Large" },
        { "slug": "x-large", "size": "22px", "name": "Extra Large" }
      ]
    },
    "layout": {
      "contentSize": "720px",
      "wideSize": "1200px"
    },
    "spacing": {
      "spacingScale": {
        "steps": 0,
        "mediumStep": 1.5,
        "unit": "rem"
      },
      "units": ["rem", "em", "px", "%"]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background-warm)",
      "text": "var(--wp--preset--color--text)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--body)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.6"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "600"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ]
}
